<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>@(Model != null ? Model.Title ?? "OpenHomeserver Plugin" : "OpenHomeserver Plugin")</title>
        <link type="text/css" rel="stylesheet" href="/Assets/Styles/bootstrap.min.css" />
        <link type="text/css" rel="stylesheet" href="/Assets/Styles/toastr.min.css" />
        <link type="text/css" rel="stylesheet" href="/Assets/Styles/openhomeserver.css" />
        @RenderSection("Styles", false)
    </head>
    <body>
        <div role="navigation" class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand">OpenHomeServer</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/">Home</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Plugins <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="/ripper">Ripper</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/notifications">Notifications</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="page-header">
              <h1>@(Model != null ? Model.Title ?? "This is where the title goes" : "This is where the title goes")</h1>
            </div>
            <div>@RenderBody()</div>
        </div>
        <script type="text/javascript" src="/Assets/Scripts/jquery-2.1.1.min.js"></script>
        <script type="text/javascript" src="/Assets/Scripts/bootstrap.min.js"></script>
        <script type="text/javascript" src="/Assets/Scripts/jquery.signalR-2.1.2.min.js"></script>
        <script type="text/javascript" src="/Assets/Scripts/knockout-3.1.0.js"></script>
        <script type="text/javascript" src="/Assets/Scripts/toastr.min.js"></script>
        <script type="text/javascript" src="/Assets/Scripts/OpenHomeServer.js"></script>
        <script type="text/javascript" src="/signalr/hubs"></script>
        @RenderSection("Javascript", false)
        <script type="text/javascript">
            var openHomeServer;
            $(function(){
                openHomeServer = new openHomeServer();
            });
        </script>
    </body>
</html>